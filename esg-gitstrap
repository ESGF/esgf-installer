        },
        'binlinks' => ["bin/esg-search","bin/esgf-crawl"],
        'configlinks' => [],
        'installerlinks' => [],
    },
    'esgf-security' => {
        'url' => 'git://github.com/ESGF/esgf-security.git',
        'branch' => {
            'stable' => 'master',
            'devel' => 'devel',
            'experiment' => 'devel',
        },
        'binlinks' => ["bin/esg-security","bin/esgf-user-migrate"],
        'configlinks' => [],
