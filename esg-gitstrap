            'experiment' => 'devel',
        },
        'binlinks' => ["bin/esg-idp"],
        'configlinks' => [],
        'installerlinks' => [],
    },
    'esgf-node-manager' => {
        'url' => 'git://github.com/ESGF/esgf-node-manager.git',
        'branch' => {
            'stable' => 'master',
            'devel'  => 'devel',
